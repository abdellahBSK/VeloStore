@page
@model VeloStore.Pages.AssistantModel
@{
    ViewData["Title"] = "AI Shopping Assistant";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">
                <i class="bi bi-robot"></i> AI Shopping Assistant
            </h1>
            <p class="text-muted mb-4">
                Ask me about products, search for items, or manage your shopping cart. I'm here to help!
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <!-- Chat Messages -->
            <div class="card mb-3" style="height: 500px; overflow-y: auto;">
                <div class="card-body">
                    @if (Model.Messages != null && Model.Messages.Any())
                    {
                        @foreach (var message in Model.Messages)
                        {
                            <div class="mb-3 @(message.Role == "user" ? "text-end" : "")">
                                <div class="d-inline-block p-3 rounded @(message.Role == "user" ? "bg-primary text-white" : "bg-light")" style="max-width: 75%;">
                                    <div class="fw-bold mb-1">
                                        @if (message.Role == "user")
                                        {
                                            <span>You</span>
                                        }
                                        else
                                        {
                                            <span><i class="bi bi-robot"></i> Assistant</span>
                                        }
                                    </div>
                                    <div>@message.Content</div>
                                    <small class="d-block mt-2 opacity-75">
                                        @message.Timestamp.ToLocalTime().ToString("HH:mm")
                                    </small>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted mt-5">
                            <i class="bi bi-chat-dots" style="font-size: 3rem;"></i>
                            <p class="mt-3">Start a conversation! Try asking:</p>
                            <ul class="list-unstyled">
                                <li>"Show me all products"</li>
                                <li>"What's in my cart?"</li>
                                <li>"Find products with 'bike' in the name"</li>
                                <li>"Add product 1 to my cart"</li>
                            </ul>
                        </div>
                    }
                </div>
            </div>

            <!-- Response Display (if available) -->
            @if (Model.RagResponse != null)
            {
                <div class="alert alert-info mb-3">
                    @if (Model.RagResponse.ToolCalls != null && Model.RagResponse.ToolCalls.Any())
                    {
                        <small class="d-block mb-2">
                            <i class="bi bi-gear"></i> Actions taken: 
                            @string.Join(", ", Model.RagResponse.ToolCalls)
                        </small>
                    }
                </div>
            }

            <!-- Input Form -->
            <form method="post" class="mb-3">
                <div class="input-group">
                    <input asp-for="RagRequest.Message" 
                           class="form-control" 
                           placeholder="Ask me anything about products or your cart..." 
                           autocomplete="off"
                           autofocus />
                    <input asp-for="RagRequest.ConversationId" type="hidden" value="@(Model.RagRequest.ConversationId ?? Guid.NewGuid().ToString())" />
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-send"></i> Send
                    </button>
                </div>
                <span asp-validation-for="RagRequest.Message" class="text-danger"></span>
            </form>

            <!-- Clear Chat Button -->
            @if (Model.Messages != null && Model.Messages.Any())
            {
                <form method="post" asp-page-handler="Clear" class="mb-3">
                    <input asp-for="RagRequest.ConversationId" type="hidden" value="@(Model.RagRequest.ConversationId ?? Guid.NewGuid().ToString())" />
                    <button type="submit" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-trash"></i> Clear Chat
                    </button>
                </form>
            }

            <!-- Error Messages -->
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Auto-scroll to bottom of chat
        const chatContainer = document.querySelector('.card-body');
        if (chatContainer) {
            chatContainer.scrollTop = chatContainer.scrollHeight;
        }
    </script>
}

