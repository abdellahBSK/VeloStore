<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - VeloStore</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <style>
        body {
            background-color: #f5f5f5;
        }

        .product-card {
            border-radius: 12px;
            transition: all 0.3s ease;
        }

            .product-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 10px 25px rgba(0,0,0,0.15);
            }

        .product-title {
            min-height: 40px;
        }

        .btn-warning {
            font-weight: bold;
        }

        .navbar-brand {
            letter-spacing: 1px;
        }
    </style>
</head>

<body>

    <!-- ================= NAVBAR ================= -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">

            <!-- Logo -->
            <a class="navbar-brand fw-bold" asp-page="/Index">
                🛒 VeloStore
            </a>

            <!-- Mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">

                <!-- Left -->
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Index">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Assistant">
                            🤖 AI Assistant
                        </a>
                    </li>
                </ul>

                <!-- Right -->
                <ul class="navbar-nav align-items-center">

                    <!-- Panier -->
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Cart/Index">
                            🛒 Panier
                        </a>
                    </li>

                    <!-- AUTHENTIFICATION -->
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <span class="nav-link text-light">
                                Bonjour @User.Identity.Name
                            </span>
                        </li>

                        <li class="nav-item">
                            <form method="post"
                                  asp-area="Identity"
                                  asp-page="/Account/Logout"
                                  class="d-inline">
                                <button type="submit"
                                        class="btn btn-link nav-link text-light">
                                    Logout
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-area="Identity"
                               asp-page="/Account/Login">
                                Login
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link"
                               asp-area="Identity"
                               asp-page="/Account/Register">
                                Register
                            </a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>

    <!-- ================= CONTENT ================= -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>


    @RenderSection("Scripts", required: false)

</body>
</html>
